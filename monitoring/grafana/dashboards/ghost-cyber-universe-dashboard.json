{
  "dashboard": {
    "id": null,
    "title": "Ghost Cyber Universe - Security Dashboard",
    "tags": ["security", "ghost-cyber-universe", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Score",
        "type": "stat",
        "targets": [
          {
            "expr": "ghost_cyber_universe_security_score",
            "legendFormat": "Security Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Security Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{alertname}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Vulnerability Trends",
        "type": "timeseries",
        "targets": [
          {
            "expr": "ghost_cyber_universe_vulnerabilities_total",
            "legendFormat": "{{severity}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Security Scans",
        "type": "timeseries",
        "targets": [
          {
            "expr": "ghost_cyber_universe_scan_duration_seconds",
            "legendFormat": "{{scan_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Policy Violations",
        "type": "timeseries",
        "targets": [
          {
            "expr": "ghost_cyber_universe_policy_violations_total",
            "legendFormat": "{{policy_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ]
  }
}
