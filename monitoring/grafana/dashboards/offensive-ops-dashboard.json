{
  "dashboard": {
    "title": "Offensive Operations Suite - Performance Dashboard",
    "tags": ["offensive", "red-team", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Genjutsu Build Time",
        "type": "graph",
        "targets": [
          {
            "expr": "genjutsu_build_duration_seconds",
            "legendFormat": "Build Time",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Time (seconds)"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [180],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "Genjutsu Build Time Alert",
          "message": "Build time exceeded 3 minutes target"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Hiraishin Operation Times",
        "type": "graph",
        "targets": [
          {
            "expr": "hiraishin_deploy_duration_seconds",
            "legendFormat": "Deploy",
            "refId": "A"
          },
          {
            "expr": "hiraishin_destroy_duration_seconds",
            "legendFormat": "Destroy",
            "refId": "B"
          },
          {
            "expr": "hiraishin_rollback_duration_seconds",
            "legendFormat": "Rollback",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration (seconds)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Performance Targets Status",
        "type": "stat",
        "targets": [
          {
            "expr": "(genjutsu_build_duration_seconds < 180) * 100",
            "legendFormat": "Genjutsu < 3min",
            "refId": "A"
          },
          {
            "expr": "(hiraishin_deploy_duration_seconds < 180) * 100",
            "legendFormat": "Deploy < 180s",
            "refId": "B"
          },
          {
            "expr": "(hiraishin_rollback_duration_seconds < 60) * 100",
            "legendFormat": "Rollback < 60s",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 100
                }
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Ghost Injection Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(ghost_injection_success_total[5m]) / rate(ghost_injection_attempts_total[5m]) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 14
        }
      },
      {
        "id": 5,
        "title": "Infrastructure Snapshot Count",
        "type": "stat",
        "targets": [
          {
            "expr": "hiraishin_snapshots_total",
            "legendFormat": "Total Snapshots",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 14
        }
      },
      {
        "id": 6,
        "title": "Payload Obfuscation Level",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (level) (genjutsu_obfuscation_level)",
            "legendFormat": "{{level}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 14
        }
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
