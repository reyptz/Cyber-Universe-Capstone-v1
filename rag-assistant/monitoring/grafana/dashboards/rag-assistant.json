{
  "dashboard": {
    "id": null,
    "title": "Assistant RAG Sécurisé - PME Mali",
    "tags": ["rag", "security", "pme-mali"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Statut de Santé du Système",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"rag-assistant\"}",
            "legendFormat": "Service RAG"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Requêtes par Minute",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rag_requests_total[1m])",
            "legendFormat": "Requêtes/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Tentatives d'Attaque Détectées",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_attacks_detected_total[5m])",
            "legendFormat": "Attaques/min"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Contenu en Quarantaine",
        "type": "stat",
        "targets": [
          {
            "expr": "rag_quarantine_items_total",
            "legendFormat": "Items en quarantaine"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Temps de Réponse",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rag_response_time_seconds_bucket[5m]))",
            "legendFormat": "95e percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(rag_response_time_seconds_bucket[5m]))",
            "legendFormat": "50e percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
